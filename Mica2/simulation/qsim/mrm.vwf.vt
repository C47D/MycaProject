module mrm_vlg_vec_tst();
// constants                                           
// general purpose registers
reg [3:0] a;
// wires                                               
wire [6:0] D;

wire sampler;                             

// assign statements (if any)                          
mrm i1 (
// port map - connection between master ports and signals/registers   
	.D(D),
	.a(a)
);
// a[ 3 ]
initial
begin
	a[3] = 1'b0;
	a[3] = #400000 1'b1;
	a[3] = #400000 1'b0;
end 
// a[ 2 ]
initial
begin
	repeat(2)
	begin
		a[2] = 1'b0;
		a[2] = #200000 1'b1;
		# 200000;
	end
	a[2] = 1'b0;
end 
// a[ 1 ]
always
begin
	a[1] = 1'b0;
	a[1] = #100000 1'b1;
	#100000;
end 
// a[ 0 ]
always
begin
	a[0] = 1'b0;
	a[0] = #50000 1'b1;
	#50000;
end 

mrm_vlg_sample_tst tb_sample (
	.a(a),
	.sampler_tx(sampler)
);

mrm_vlg_check_tst tb_out(
	.D(D),
	.sampler_rx(sampler)
);
endmodule

